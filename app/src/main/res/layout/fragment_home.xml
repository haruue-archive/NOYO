<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jude.rollviewpager.RollPagerView
            android:id="@+id/rollViewPager"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:rollviewpager_play_delay="3000"
            app:rollviewpager_hint_gravity="right"
            app:rollviewpager_hint_paddingRight="16dp"
            app:rollviewpager_hint_paddingBottom="16dp"/>

        <LinearLayout
            android:id="@+id/buttonRentFarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="135dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_rent_farm"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="3dp"
                    android:gravity="center"
                    android:background="@color/bg_ht_tag_black"
                    android:textSize="18sp"
                    android:text="@string/farm_rent"
                    android:textColor="@android:color/white"/>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/buttonPreSell"
                android:layout_width="0dp"
                android:layout_height="135dp"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:foreground="?attr/selectableItemBackground">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/bg_pre_sell"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:padding="3dp"
                    android:gravity="center"
                    android:background="@color/bg_ht_tag_black"
                    android:textSize="18sp"
                    android:text="@string/pre_sell"
                    android:textColor="@android:color/white"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
